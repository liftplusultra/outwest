<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content contact-modal-content bg-black">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
          <i class="bi bi-x-lg text-white"></i>
        </button>
      </div>
      <div class="modal-body pt-0">
        <div class="row">
          <div class="text-center">
            <h1 class="cyber-font text-white pb-3">Contact Us</h1>
          </div>
        </div>

        <div class="row mb-2">
          <div class="col text-center">
            <div class="card"><div class="card-body text-center">
              <a href="tel:+14807437821" class="fs-1 lh-lg text-black-50 fw-bold">480-743-7821</a><br>
              <a href="mailto:contact@outwesttech.com" class="fs-1 lh-lg text-black-50 fw-bold">contact@outwesttech.com</a>
            </div></div>
          </div>
        </div>

        <div id="contact-form-row" class="row justify-content-center">
          <div class="col">
            <div class="card h-100 card-span p-3" id="contact-card">
              <div class="card-body">
                <div id="spinner" class="d-none d-flex justify-content-center">
                  <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                  </div>
                </div>

                <div class="contact-form-container text-center d-flex">
                  <div id="post-submit-content"></div>
                  <div id="pre-submit-content"><%= render partial: "contacts/form" %></div>
                </div>

              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>