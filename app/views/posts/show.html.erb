<% content_for :title, @post.title %>
<% content_for :description, truncate(strip_tags(@post.content.to_s), length: 120) %>
<% content_for :meta_image, url_for(@post.header_image.url) %>
<%= render partial: "posts/post_crumbs" %>
<%= render partial: "posts/post_header", locals: {post: @post} %>
<%= render partial: "posts/header_image", locals: {post: @post} %>
<%= render partial: "posts/content", locals: {post: @post} %>