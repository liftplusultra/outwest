<%= form_with(model: [:admin, tag]) do |form| %>
  <div class="row">
    <div class="col-lg-12 col-12">
      <div class="card mb-6 shadow border-0">
        <div class="card-body p-6">

          <h4 class="mb-4 h5 mt-5">Tag Details</h4>

          <div class="row">
            <div class="mb-3 col-lg-6">
              <%= form.label :label, class: "form-label" %>
              <%= form.text_field :label, class: "form-control" %>
            </div>
          </div>

          <div class="row">
            <div class="mb-3 col-lg-6">
              <%= form.label :color, class: "form-label" %>
              <%= form.color_field :color, class: "form-control", style: "height: 40px" %>
            </div>
          </div>

          <div class="row">
            <div class="col-lg-12">
              <%= link_to "Cancel", admin_tags_path, class: "btn btn-secondary" %>
              <%= form.submit "Save", class: "btn btn-primary ms-2" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>