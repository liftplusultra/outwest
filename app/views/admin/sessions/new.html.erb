<section class="position-relative h-100 pt-5 pb-4">

  <!-- Sign in form -->
  <div class="container h-100 pt-5">
    <div class="row d-flex">
      <div class="col-12 col-md-5 mx-auto">
        <h1 class="text-center text-xl-start">Out West Tech - Admin</h1>
        <hr class="my-4">
        <%= form_with scope: :session, url: admin_session_path, class: "mb-2" do |f| %>
          <div class="position-relative mb-4">
            <label for="email" class="form-label fs-base">Email</label>
            <%= f.text_field :email, class: "form-control form-control-lg" %>
          </div>
          <div class="mb-4">
            <label for="password" class="form-label fs-base">Password</label>
            <%= f.password_field :password, class: "form-control form-control-lg" %>
          </div>

          <button type="submit" class="btn btn-primary shadow-primary btn-lg w-100">Sign in</button>
        <% end %>
      </div>
    </div>
  </div>
</section>